# -*- mode: yaml -*-
# vim: ft=yaml

drbd:
  global:
    minor-count: 9

  res:
    # DRBD resource name
    name: drbd-test

    # resource net protocol
    protocol: C

    # 
    on-io-error: pass_on

    # 
    device: /dev/drbd9

    # 
    disk: /dev/vdb

    # 
    meta-disk: internal

    #
    ip_port_list:
      - 192.168.122.101:7910
      - 192.168.122.102:7910

    node1-ip: 192.168.10.101
    node2-ip: 192.168.10.102
    node1-port: 7992
    node2-port: 7992
    node1-id: 1
    node2-id: 2


    


cluster:
  # Cluster name
  name: hacluster

  # optional: ntp server
  # ntp: pool.ntp.org
  ntp: pool.ntp.org
